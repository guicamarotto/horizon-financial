{
  "ConnectionStrings": {
    "Postgres": "Host=postgres;Port=5432;Database=finance_lab;Username=postgres;Password=postgres"
  },
  "Kafka": {
    "BootstrapServers": "kafka:29092",
    "GroupId": "notification-group"
  },
  "Resilience": {
    "MaxAttempts": 5,
    "BaseDelayMs": 1000,
    "MaxJitterMs": 300
  },
  "Notification": {
    "FailOnRejectedEvents": false
  },
  "Otel": {
    "Endpoint": "http://jaeger:4317"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
